        async defer></script> *@
@section js {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCGEyKiDCVY0ACQfUFlNGsvlW9QJF-JCmc"
            async defer></script>
    <script src="~/assets/js/contact/script.js"></script>
}