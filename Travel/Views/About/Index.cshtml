    <section id="staff">
        <div class="cus-container">
            <div class="title">
                <p>Meet our team</p>
            </div>
            <div class="row">
                @{
                    foreach(var item in Model)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="item">
                                <div class="coverForImage">
                                    <div class="img"
                                         style="background-image: url('assets/images/about/@item.Image'); background-size: cover;">
                                        <!-- <img src="./assets/images/about/team2-600x700.png">  -->
                                    </div>
                                </div>

                                <div class="name">
                                    <p>@item.Name</p>
                                </div>

                                <div class="position">
                                    <p>@item.Position</p>
                                </div>
                            </div>
                        </div>
                    }
                }

               

            </div>
        </div>
    </section>

</main>
@section js {
    <script src="~/assets/js/about/script.js"></script>
}