                                                return response.json();
                                            })
                                            .then(data => {
                                                const countElem = document.getElementById('wishlist-count');
                                                if (countElem) {
                                                    countElem.textContent = data.result;
                                                }
                                            })
                                            .catch(error => console.error('Fetch error:', error));
                                    }


                                    updateWishlistCount();

                                                                 
