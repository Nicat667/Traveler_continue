@model CreateVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="pc-container">
    <div class="pc-content">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label for="exampleInputEmail1">Question</label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Question" asp-for="Question">
                <span class="text-danger" asp-validation-for="Question"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Answer</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Answer" asp-for="Answer">
                <span class="text-danger" asp-validation-for="Answer"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>