@model IEnumerable<HotelVM>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="pc-container">
    <div class="pc-content">
        <a asp-action="Create" class="btn btn-success mt-1" style="width: 75px">Create</a>
        <table class="table table-striped table-hover mt-2">
            <thead>
                <tr>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">#</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Main Image</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Name</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Address</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Stars</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Options</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 280px; min-width:40px">@count</td>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;"><img src="@item.HotelImageUrl" style="max-width: 250px; height: auto;" /></td>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 280px;">@item.Name</td>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 280px;">@item.Address</td>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px; min-width:130px">
                            @for (int i = 1; i <= item.StarCount; i++)
                            {
                                <span><i class="fa-solid fa-star" style="color: rgb(245, 212, 66)"></i></span>
                            }
                        </td>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">
                            <div class="d-flex gap-1">
                                <button type="button" class="btn btn-danger deleteHotel" dataId="@item.Id" style="width: 75px;">Delete</button>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" style="width: 75px;">Edit</a>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary" style="width: 75px;">Detail</a>
                            </div>
                        </td>

                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/admin/assets/js/hotel.js"></script>