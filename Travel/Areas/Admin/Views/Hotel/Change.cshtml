@model ChangeImageVM

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="pc-container">
    <div class="pc-content">
        <form method="post" asp-action="Change" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">New Images</label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="New Image" asp-for="NewImage">
                <span class="text-danger" asp-validation-for="NewImage"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>