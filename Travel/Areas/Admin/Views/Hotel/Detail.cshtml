@model HotelDetailVM


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="pc-container">
    <div class="pc-content">
        <a asp-action="Index" class="btn btn-success">Return</a>
        <a asp-action="Create" class="btn btn-success" style="margin-left:15px">Add Room</a>
        <a asp-controller="Room" asp-action="Index" class="btn btn-primary" style="margin-left:15px">Rooms</a>
        <div class="card shadow-sm p-4 mb-5 bg-white rounded">
            <div class="row">
                <div class="col-md-5">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var imageUrl in Model.ImageUrls)
                        {
                            <img src="@imageUrl.Url" class="img-fluid rounded" style="max-width: 100%; max-height: 200px;" />
                        }
                    </div>
                </div>
                <div class="col-md-7">
                    <h4 style="font-weight:700; font-size:32px"><i>@Model.Name</i></h4>
                    <p style="font-size:18px"><span style="font-weight:500; font-size:20px">Address:</span> @Model.Address</p>

                    <div class="mb-2">
                        <span style="font-weight:500; font-size:20px">Stars:</span>
                        @for (int i = 1; i <= Model.StarCount; i++)
                        {
                            <i class="fa-solid fa-star" style="color: #f5d442;"></i>
                        }
                    </div>

                    <p style="font-weight:500; font-size:20px"><span style="font-weight:500; font-size:20px">Rate:</span> @((Model.Rate % 1 == 0) ? Model.Rate.ToString("0") : Model.Rate.ToString("0.0"))</p>

                    <p style="font-weight:500; font-size:20px; margin:0" style="font-weight:500; font-size:20px">Description:</p>
                    <p style="font-size:16px">
                        @Model.Description
                    </p>

                    <p style="font-weight:500; font-size:20px; margin:0;">Hotel Facilities:</p>
                    <div class="row">
                        @if (Model.AirConditioning)
                        {
                            <div class="col-md-4 col-sm-6 item mt-2">
                                <div class="icon">
                                    <i class="fa-solid fa-fan" style="font-size:25px; color:rgb(140, 137, 128)"></i>
                                </div>
                                <div class="text">
                                    <span style="font-size: 19px; font-weight: 500; color:rgb(140, 137, 128)">Air Conditioning</span>
                                </div>
                            </div>
                        }

                        @if (Model.AirportTransport)
                        {
                            <div class="col-md-4 col-sm-6 item mt-2">
                                <div class="icon">
                                    <i class="fa-solid fa-car-side" style="font-size:25px; color:rgb(140, 137, 128)"></i>
                                </div>
                                <div class="text">
                                    <span style="font-size: 19px; font-weight: 500; color:rgb(140, 137, 128)">Airport Transport</span>
                                </div>
                            </div>
                        }

                        @if (Model.FitnessCenter)
                        {
                            <div class="col-md-4 col-sm-6 item mt-2">
                                <div class="icon">
                                    <i class="fa-solid fa-dumbbell" style="font-size:25px; color:rgb(140, 137, 128)"></i>
                                </div>
                                <div class="text">
                                    <span style="font-size: 19px; font-weight: 500; color:rgb(140, 137, 128)">Fitness Center</span>
                                </div>
                            </div>
                        }

                        @if (Model.Parking)
                        {
                            <div class="col-md-4 col-sm-6 item mt-2">
                                <div class="icon">
                                    <i class="fa-solid fa-square-parking" style="font-size:25px; color:rgb(140, 137, 128)"></i>
                                </div>
                                <div class="text">
                                    <span style="font-size: 19px; font-weight: 500; color:rgb(140, 137, 128)">Parking</span>
                                </div>
                            </div>
                        }

                        @if (Model.Restaurant)
                        {
                            <div class="col-md-4 col-sm-6 item mt-2">
                                <div class="icon">
                                    <i class="fa-solid fa-utensils" style="font-size:25px; color:rgb(140, 137, 128)"></i>
                                </div>
                                <div class="text">
                                    <span style="font-size: 19px; font-weight: 500; color:rgb(140, 137, 128)">Restaurant</span>
                                </div>
                            </div>
                        }

                        @if (Model.SpaSauna)
                        {
                            <div class="col-md-4 col-sm-6 item mt-2">
                                <div class="icon">
                                    <i class="fa-solid fa-spa" style="font-size:25px; color:rgb(140, 137, 128)"></i>
                                </div>
                                <div class="text">
                                    <span style="font-size: 19px; font-weight: 500; color:rgb(140, 137, 128)">Spa & Sauna</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card img {
        width: 48%;
        height: auto;
        object-fit: cover;
    }
</style>