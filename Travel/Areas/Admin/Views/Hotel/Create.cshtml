@model HotelCreateVM

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="pc-container">
    <div class="pc-content">
        <a asp-action="Index" class="btn btn-success mt-1" style="width: 75px">Return</a>
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Address</label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Address" asp-for="Address">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Describtion</label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Describtion" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId">City</label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.Cities">
                    <option value="">-- Select Category --</option>
                </select>
                <span class="text-danger" asp-validation-for="CityId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant">Restaurant</label>
                <select asp-for="Restaurant" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span class="text-danger" asp-validation-for="Restaurant"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parking">Parking</label>
                <select asp-for="Parking" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span class="text-danger" asp-validation-for="Parking"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpaSauna">Spa&Sauna</label>
                <select asp-for="SpaSauna" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span class="text-danger" asp-validation-for="SpaSauna"></span>
            </div>
            <div class="form-group">
                <label asp-for="FitnessCenter">Fitness Center</label>
                <select asp-for="FitnessCenter" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span class="text-danger" asp-validation-for="FitnessCenter"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportTransport">Airport Transport</label>
                <select asp-for="AirportTransport" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span class="text-danger" asp-validation-for="AirportTransport"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirConditioning">Air Conditioning</label>
                <select asp-for="AirConditioning" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span class="text-danger" asp-validation-for="AirConditioning"></span>
            </div>
            <div class="form-group">
                <label asp-for="StarCount">Stars</label>
                <select asp-for="StarCount" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span class="text-danger" asp-validation-for="StarCount"></span>
            </div>
             <div class="form-group">
                <label for="exampleInputEmail1">Hotel Images</label>
                <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Images" multiple asp-for="Images">
                <span class="text-danger" asp-validation-for="Images"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>