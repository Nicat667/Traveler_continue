@model StaffVM

<div class="pc-container">
    <div class="pc-content">
        <a asp-action="Index" class="btn btn-success mt-1" style="width: 75px">Return</a>
        <table class="table table-striped table-hover mt-2">
            <thead>
                <tr>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Name</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Image</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Position</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;">@Model.Name </td>
                    <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word;max-width: 300px;"><img src="@Model.ImageUrl" style="max-width: 300px; height: auto;" /></td>
                    <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word;max-width: 300px;">@Model.Position</td>
            </tbody>
        </table>

    </div>
</div>
