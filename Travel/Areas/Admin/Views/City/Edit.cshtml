@model CityEditVM
@inject IBlobStorage _blobService
@{
    var existImageUrl = await _blobService.GetBlobUrlAsync(Model.ExistImage);
}


<div class="pc-container">
    <div class="pc-content">
        <a asp-action="Index" class="btn btn-success mt-1" style="width: 75px">Return</a>
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">Question</label>
                <input class="form-control mt-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Category Name" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mt-3">
                <p>Current image:</p>
                <img class="mt-2" src="@existImageUrl" style="width: 300px; height:200px" />
            </div>
            <div class="form-group mt-3">
                <label for="exampleInputEmail1">Image</label>
                <input class="form-control mt-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Image" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
</div>