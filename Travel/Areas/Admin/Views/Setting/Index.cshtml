@using Service.ViewModels.Setting

@model IEnumerable<SettingVM>
<div class="pc-container">
    <div class="pc-content">
        <table class="table table-striped table-hover mt-2">
            <thead>
                <tr>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">#</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Key</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Value</th>
                    <th style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">Options</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;">@count</td>
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;">@item.Key</td>
                        @if(item.Key == "logo")
                        {
                            <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;"><img src="@item.Value" style="width:250px; height:auto"/></td>
                        }
                        else if(item.Key == "video")
                        {
                            <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;">
                                <div class="video">
                                    <video id="myVideo" src="@item.Value" controls
                                           preload="metadata"></video>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none; white-space: normal; word-break: break-word; max-width: 300px;">@item.Value</td>
                        }
                        
                        <td style="border-top: 1px solid rgb(170, 173, 179); border-bottom: 1px solid rgb(170, 173, 179); border-left: none; border-right: none;">
                            <div class="d-flex gap-1">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" style="width: 75px;">Edit</a>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary" style="width: 75px;">Detail</a>
                            </div>
                        </td>

                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/admin/assets/js/blogCategory.js"></script>